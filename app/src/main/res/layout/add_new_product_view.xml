<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pl.edu.pwr.a200184student.my_personal_trainer.controller.MainPanelCalendarDetailController" >

    <TextView
        android:id="@+id/addtitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dodaj Nowy Produkt"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <EditText
        android:id="@+id/addProductNameEdtiText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nazwa produktu"/>
    <EditText
        android:id="@+id/addProductCaloriesEdtiText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ilość Kalorii / 100 Gram">
    </EditText>
    <EditText
        android:id="@+id/addProductProteinEdtiText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ilość Białka / 100 Gram">
    </EditText>
    <EditText
        android:id="@+id/addProductCarbsEdtiText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ilość Węglowodanów / 100 Gram">
    </EditText>
    <EditText
        android:id="@+id/addProductFatEdtiText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ilość Tłuszczy / 100 Gram">
    </EditText>
    </LinearLayout>