<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/drewno"
    android:orientation="horizontal"
    tools:context="pl.edu.pwr.a200184student.my_personal_trainer.controller.on_start_controller"
    android:weightSum="1"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button_registry"
        android:textSize="25dp"
        android:id="@+id/registry_button"
        android:minHeight="100px"
        android:onClick="go_to_registry_activity"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/log_in_button"
        android:minHeight="100px"
        android:onClick="go_to_logIn_activity"
        android:background="@drawable/custom_buttons_log_in"
        android:layout_above="@+id/registry_button"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp" />

    <ImageView
        android:layout_width="306dp"
        android:layout_height="374dp"
        android:id="@+id/logo_image_view"
        android:src="@drawable/logo2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />
        " />

</RelativeLayout>
