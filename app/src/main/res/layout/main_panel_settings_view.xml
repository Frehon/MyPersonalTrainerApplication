<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_panel_settings_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drewno4"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pl.edu.pwr.a200184student.my_personal_trainer.controller.MainPanelSettingsController">

    <TableRow

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80sp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/user"
            android:id="@+id/userNameImageView"/>

        <EditText
            android:layout_width="wrap_content"
            android:minHeight="100dp"
            android:textSize="25dp"
            android:textColor="#323232"
            android:fontFamily="sans-serif-black"
            android:layout_height="65dp"
            android:id="@+id/userNameEditText"
            android:layout_weight="0.88" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30sp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/message"
            android:id="@+id/emailImageView"/>

        <EditText
            android:layout_width="wrap_content"
            android:minHeight="100dp"
            android:textSize="25dp"
            android:textColor="#323232"
            android:fontFamily="sans-serif-black"
            android:layout_height="65dp"
            android:id="@+id/emailEditText"
            android:layout_weight="0.88" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30sp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/key"
            android:id="@+id/passwordImageView"/>

        <EditText
            android:layout_width="wrap_content"
            android:minHeight="100dp"
            android:textSize="25dp"
            android:textColor="#323232"
            android:fontFamily="sans-serif-black"
            android:layout_height="65dp"
            android:id="@+id/passwordEditText"
            android:layout_weight="0.88" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30sp">

        <Button
            android:layout_width="wrap_content"
            android:minHeight="100dp"
            android:textSize="25dp"
            android:textColor="#323232"
            android:fontFamily="sans-serif-black"
            android:layout_height="65dp"
            android:id="@+id/updateAccountDataButton"
            android:layout_weight="0.88" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30sp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/trash"
            android:id="@+id/deleteUserImageView"/>

        <Button
            android:layout_width="wrap_content"
            android:minHeight="100dp"
            android:textSize="25dp"
            android:textColor="#323232"
            android:fontFamily="sans-serif-black"
            android:layout_height="65dp"
            android:id="@+id/deleteUserButton"
            android:layout_weight="0.88" />
    </TableRow>

</TableLayout>
