<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drewno2"
    tools:context=".controller.RatingController" >

    <TextView
        android:text="Prześlij swoje uwagi :)"
        android:textSize="28dp"
        android:textColor="#233296"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/ratingTitleTextView"
        android:layout_below="@+id/ratingBar"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:minHeight="200dp"
        android:hint="........."
        android:layout_marginLeft="20sp"
        android:ems="10"
        android:id="@+id/commentEditText"
        android:layout_below="@+id/ratingTitleTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Wyślij Opinie"
        android:textSize="28dp"
        android:textColor="#233296"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/commentEditText"
        android:layout_alignParentStart="true"
        android:id="@+id/sendOpinionButton"
        android:layout_alignParentEnd="true" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

</RelativeLayout>